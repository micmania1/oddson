{
  "Version": "2012-10-17",
  "Id": "WebsiteBucketPolicy",
  "Statement": [
    {
      "Sid": "PublicReadGetObject",
      "Effect": "Allow",
      "Principal": {
          "CanonicalUser": "${cloudfront_oai}"
      },
      "Action": ["s3:GetObject"],
      "Resource": ["arn:aws:s3:::${s3_bucket}/*"]
    }
  ]
}
